<div class="container-fluid">
  <div class="col-sm-2"></div>
  <h1>Create A New Idea</h1>

  <div class="row">
    <div class="col-sm-2"></div>
    <form>
      <div class="form-group">
        <input class="form-control" type="text" id="idea-title" placeholder="Idea Title">
      </div>
      <div class="form-group">
        <textarea class="form-control" rows="3" id="idea-body" placeholder="Write Your Idea Here!"></textarea>
      </div>
      <div class="col-sm-4">
        <input class="btn btn-default pull-right" id="create-idea" type="button" name="submit" value="Save">
      </div>
      <div class="col-sm-2"></div>
    </form>
  </div>

  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
      <h1>Latest Ideas</h3>
      <div id="all-ideas">
      </div>
    </div>
    <div class="col-sm-4">
      <button name="button-fetch" class="btn btn-default pull-right">Fetch Ideas</button>
    </div>
    <div class="col-sm-2"></div>
  </div>

</div>
